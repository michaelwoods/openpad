{
  "name": "openpad",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel --stream dev",
    "build": "pnpm --parallel build",
    "lint": "pnpm --parallel lint",
    "test": "pnpm --parallel test",
    "test:coverage": "pnpm --parallel test:coverage",
    "dev:backend": "pnpm --filter backend dev",
    "docker:dev": "docker compose --profile dev up --build",
    "docker:prod": "docker compose --profile production up -d"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  }
}
